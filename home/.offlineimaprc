                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'starred',
                            '[Gmail]/Important': 'important',
                            '[Gmail]/Spam':      'spam',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            }.get(folder, folder)
idlefolders = ['INBOX', '[Gmail]/All Mail', '[Gmail]/Important']

