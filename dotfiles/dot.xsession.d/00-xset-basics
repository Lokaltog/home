# Disable bell
xset b 0 &

# Set keyboard repeat rate
xset r rate 250 40 &

# Set mouse speed
xinput --set-prop "SynPS/2 Synaptics TouchPad" "Device Accel Profile" 0 &

# Set font paths
for FONTPATH in "$HOME/.fonts/bdf" "/usr/share/fonts/artwiz-latin1-fonts"; do
	[[ -d $FONTPATH ]] && xset +fp $FONTPATH 
done
